{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "esnext",
      "dom"
    ],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    //"declaration": true,
    //"declarationDir": "./dist",
    "moduleResolution": "node",
    "module": "esnext",
    "strict": true,
    "noImplicitAny": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "strictNullChecks": false,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./create.d.ts",
      "./node_modules/@types/"
    ],
    "noEmit": true

  },
  "include": [
    "./create.d.ts",
    "./src/create-command.ts"
  ]
}
